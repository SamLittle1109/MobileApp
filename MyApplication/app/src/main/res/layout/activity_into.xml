<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lit15146664.myapplication.IntoActivity"
    android:background="@color/abc_background_cache_hint_selector_material_light"
    android:clickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Sam&apos;s Questionnaire App"
        android:id="@+id/lblIntro"
        android:textColor="#010101"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imgIntro"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/imgIntro" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/btnPlay"
        android:layout_above="@+id/btnScore"
        android:layout_alignEnd="@+id/btnScore"
        android:layout_alignStart="@+id/btnScore" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Scores"
        android:id="@+id/btnScore"
        android:layout_above="@+id/btnAbout"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/btnAbout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39dp"
        android:layout_alignEnd="@+id/btnScore"
        android:layout_alignStart="@+id/btnScore" />

    <ImageView
        android:id="@+id/imgIntro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="#303F9F"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_above="@+id/lblIntro"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/HighScore"
        android:layout_above="@+id/btnPlay"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
